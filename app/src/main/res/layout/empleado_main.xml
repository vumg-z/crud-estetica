<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TextView para el usuario logeado -->
    <TextView
        android:id="@+id/tvLoggedInUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario logeado: "
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Botón para Crear Cuenta de Usuario -->
    <Button
        android:id="@+id/btnCreateUserAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta de Usuario"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLoggedInUser"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para Crear Cuenta de Empleado -->
    <Button
        android:id="@+id/btnCreateEmployeeAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta de Empleado"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateUserAccount"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAddEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver / Eliminar Empleado / Usuarios"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateEmployeeAccount"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
